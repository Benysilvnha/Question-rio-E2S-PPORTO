<script>
const questions = [
  {
    text: "Gostas de trabalhar diretamente com pessoas que precisam de cuidados de saúde?",
    options: [
      {text: "Sim", points: {Fisioterapia:2, TerapiaOcupacional:2, TerapiaFala:2, Audiologia:1}},
