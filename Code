      {text: "Não", points: {SaúdeAmbiental:1, SaúdeDigital:1}}
    ]
  },
  {
    text: "Queres trabalhar com visão e sistemas ópticos?",
    options: [
      {text: "Sim", points: {Ortóptica:3}},
      {text: "Um pouco", points: {Audiologia:2}},
      {text: "Não", points: {Fisioterapia:1, TerapiaOcupacional:1}}
    ]
  }
];

let currentQuestion = 0;
let scores = {
  Audiologia:0, BiotecnologiaMedicinal:0, CiênciasBiomédicasLaboratoriais:0,
  Farmácia:0, FisiologiaClínica:0, Fisioterapia:0, ImagemMédicaeRadioterapia:0,
  Ortóptica:0, Osteopatia:0, SaúdeAmbiental:0, SaúdeDigital:0,
  TerapiaFala:0, TerapiaOcupacional:0
};

function showQuestion() {
  if(currentQuestion >= questions.length) {
    showResult();
    return;
  }
  const q = questions[currentQuestion];
  const quizDiv = document.getElementById("quiz");
  quizDiv.innerHTML = `<div class="question"><strong>${q.text}</strong></div>`;
  q.options.forEach(opt => {
    const btn = document.createElement("button");
    btn.className = "option";
    btn.innerText = opt.text;
    btn.onclick = () => {
      for(const course in opt.points) {
        scores[course] += opt.points[course] || 0;
      }
      currentQuestion++;
      showQuestion();
    };
    quizDiv.appendChild(btn);
  });
}

function showResult() {
  document.getElementById("quiz").style.display = "none";
  const sorted = Object.entries(scores).sort((a,b) => b[1] - a[1]);
  document.getElementById("result").innerHTML =
    `<h2>Curso sugerido para ti:</h2><p><strong>${sorted[0][0]}</strong></p>`;
}

showQuestion();
</script>

